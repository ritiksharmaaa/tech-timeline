        {
          "year": "1800",
          "event": "Invention of the Voltaic Pile",
          "innovator": "Alessandro Volta",
          "impact": "Provided the first steady, continuous flow of electric current (the first battery)."
        },
        {
          "year": "1820",
          "event": "Discovery of Electromagnetism",
          "innovator": "Hans Christian Ørsted",
